{
  "name": "@awowed/solidity-template-viem",
  "description": "Hardhat-based solution for solidity template using viem",
  "version": "0.0.1",
  "author": {
    "name": "Kovalov Serhii",
    "url": "https://github.com/aWoWed"
  },
  "keywords": [
    "hardhat",
    "solidity",
    "template",
    "eslint",
    "viem",
    "ignition",
    "awowed"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "build": "run-s clean compile",
    "test": "hardhat test --verbose",
    "chain": "hardhat node",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.json",
    "deploy": "hardhat ignition deploy",
    "lint:ts": "eslint \"**/*.{js,ts}\"",
    "lint:ts:fix": "eslint \"**/*.{js,ts}\" --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint \"contracts/**/*.sol\" --quiet --fix",
    "format:ts": "prettier \"**/*.{js,ts,json}\" --check",
    "format:ts:fix": "prettier \"**/*.{js,ts,json}\" --write",
    "format:sol": "prettier \"contracts/**/*.sol\" --check",
    "format:sol:fix": "prettier \"contracts/**/*.sol\" --write",
    "format:yml": "prettier \"**/*.{yml,yaml}\" --check",
    "format:yml:fix": "prettier \"**/*.{yml,yaml}\" --write",
    "codestyle": "run-s lint:* format:*",
    "codestyle:fix": "run-s lint:*:* format:*:*",
    "slither": "slither . --config-file ./slither.config.json",
    "slither:summary": "yarn slither --print human-summary --config-file ./slither.config.json"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "hardhat": "^2.22.8",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-docgen": "^1.3.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solidity-coverage": "^0.8.12",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.22.8"
  }
}
